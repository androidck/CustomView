<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/qmui_config_color_white"
    >

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_title_color="@android:color/black"
        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_return_black"
        app:qmui_topbar_text_btn_color_state_list="@android:color/black"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttom_menu"
        android:layout_below="@id/topbar"
        android:orientation="vertical"
        android:background="#f6f6f6"
        >
        <!-- 金额输入 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="￥"
                android:textColor="@color/colorPrimary"
                android:textSize="60px"
                android:gravity="center_vertical"
                android:paddingLeft="24px"
                />
            <EditText
                android:id="@+id/ed_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@null"
                android:textSize="38px"
                android:inputType="numberDecimal"
                android:paddingRight="24px"
                android:textColor="@android:color/black"
                android:hint="单笔限额￥1,000.00"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="24px"
            android:background="@color/qmui_config_color_white"
            android:orientation="vertical"
            >
            <!-- 交易金额 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="交易金额"
                    style="@style/quick_style_left"
                    />
                <TextView
                    android:id="@+id/tv_show_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="￥0.00"
                    style="@style/quick_style_right"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <!-- 交易手续费 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="交易手续费"
                    style="@style/quick_style_left"
                    />
                <TextView
                    android:id="@+id/tv_show_rate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="￥0.00"
                    style="@style/quick_style_right"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <!-- 结算手续费 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="20px"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="结算手续费"
                    style="@style/quick_style_left"
                    />
                <TextView
                    android:id="@+id/tv_show_settle_rate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="￥0.00"
                    style="@style/quick_style_right"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/buttom_menu"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:textSize="34px"
            android:gravity="center"
            android:background="@color/qmui_config_color_white"
            />
        <TextView
            android:id="@+id/pay_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@color/qmui_config_color_white"
            android:text="确认支付"
            android:textSize="34px"
            android:gravity="center"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>