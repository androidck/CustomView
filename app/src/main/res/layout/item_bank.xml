<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bg_img_bank"
            android:layout_width="match_parent"
            android:layout_height="302px"
            android:background="@mipmap/img_minsheng"
            android:orientation="vertical"
            >
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="20px"
                >
                <ImageView
                    android:id="@+id/icon_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cmbc_trade"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70px"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/icon_bank"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tx_bankName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:text="中国民生银行"
                        android:textColor="@color/qmui_config_color_white"
                        android:textSize="38px"
                        android:gravity="center_vertical|bottom"

                        />
                    <TextView
                        android:id="@+id/tv_card_type"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="储蓄卡"
                        android:textColor="@color/qmui_config_color_white"
                        android:gravity="center_vertical|top"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="****       ****       ****       0575"
                    android:gravity="center"
                    android:textSize="38px"
                    android:textColor="@color/qmui_config_color_white"
                    android:layout_marginBottom="30px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>