<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/qmui_config_color_white">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_title_color="@android:color/black"
        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_return_black"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/qmui_config_color_white"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:background="@color/qmui_config_color_white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="手机号"
                android:textSize="30px"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                />
            <!--  android:layout_marginLeft="40px"
              android:layout_marginRight="40px"-->
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:textSize="30px"
                android:hint="请输入手机号"
                android:paddingLeft="20px"
                android:inputType="number"
                android:maxLength="11"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:background="@color/qmui_config_color_white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="验证码"
                android:textSize="30px"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                />
            <!--  android:layout_marginLeft="40px"
              android:layout_marginRight="40px"-->
            <EditText
                android:id="@+id/ed_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:textSize="30px"
                android:maxLength="6"
                android:inputType="number"
                android:hint="请输入验证码"
                android:paddingLeft="20px"

                />
            <TextView
                android:id="@+id/tv_get_msg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="获取验证码"
                android:textSize="30px"
                android:gravity="center"
                android:paddingRight="40px"
                android:textColor="@color/colorPrimary"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="100px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:textSize="36px"
            android:textColor="@color/qmui_config_color_white"
            android:text="下 一 步"
            app:qmui_borderColor="@color/colorPrimary"
            app:qmui_backgroundColor="@color/colorPrimary"
            />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>