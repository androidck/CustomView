<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132px"
        >
        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_datetime"
            android:text="10月09日 15:31"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/qmui_config_color_white"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结算付款提醒"
                android:textSize="34px"
                android:layout_marginTop="26px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="您有一笔结算款已经付款，具体到账时间已银行为准，请注意查收"
                android:textColor="#8d8d8d"
                android:lineSpacingMultiplier="1.2"
                />
            <TextView
                android:id="@+id/tv_pay_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="付款时间：2018-10-11 16:30:22"
                android:textColor="#8d8d8d"
                android:layout_marginTop="8px"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结算金额：996.2元"
                android:textColor="#8d8d8d"
                android:layout_marginTop="8px"
                />
            <TextView
                android:id="@+id/tv_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结算账号：6226****0575"
                android:textColor="#8d8d8d"
                android:layout_marginTop="8px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginTop="20px"
                />
            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="查看详情"
                android:gravity="center_vertical"
                android:textSize="32px"
                android:drawableRight="?attr/qmui_common_list_item_chevron"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v7.widget.CardView>
</com.zhy.autolayout.AutoLinearLayout>