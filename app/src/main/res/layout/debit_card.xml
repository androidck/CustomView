<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/qmui_config_color_white">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_title_color="@android:color/black"
        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_return_black"
        app:qmui_topbar_text_btn_color_state_list="@android:color/black"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/qmui_config_color_white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="#fef9d3"
            android:text="绑定您在银行的储蓄卡号,交易的资金将转入绑定的银行卡中"
            android:gravity="center"
            android:textSize="24px"
            android:textColor="#f18f36"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:text="吴栋林"
                android:gravity="center_vertical"
                android:paddingLeft="24px"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:text="622125********0614"
                android:gravity="center_vertical"
                android:paddingLeft="24px"
                android:textStyle="bold"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f2f2f2"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>