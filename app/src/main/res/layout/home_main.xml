<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- 顶部菜单 -->
        <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="292px"
        android:orientation="vertical"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_pos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_pos"
                android:text="POS交易"
                android:textColor="@color/qmui_config_color_white"
                android:gravity="center"
                android:drawablePadding="14px"
                />

            <TextView
                android:id="@+id/tv_shuangmian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_sm"
                android:text="双免交易"
                android:textColor="@color/qmui_config_color_white"
                android:gravity="center"
                android:drawablePadding="14px"
                />

            <TextView
                android:id="@+id/tv_sm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_ma"
                android:text="扫码交易"
                android:textColor="@color/qmui_config_color_white"
                android:gravity="center"
                android:drawablePadding="14px"
                />

            <TextView
                android:id="@+id/tv_shanshou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_lightning_pay"
                android:text="云闪收"
                android:textColor="@color/qmui_config_color_white"
                android:gravity="center"
                android:drawablePadding="14px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </com.zhy.autolayout.AutoLinearLayout>

        <!-- 刷卡结算管理 -->
        <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white"
        android:orientation="vertical"
        >
        <!-- 日期 -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="57px"
            android:text="10月11日"
            android:gravity="center_vertical"
            android:paddingLeft="24px"
            android:textSize="24px"
            android:drawableLeft="@mipmap/icon_calendar"
            android:drawablePadding="15px"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede"
            />
        <!-- 刷卡管理 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="270px"
            android:orientation="vertical"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="今日刷卡"
                    android:textColor="#bbbbbb"
                    android:gravity="center|bottom"
                    />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textColor="#222222"
                    android:textSize="50px"
                    android:gravity="center"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <!-- 结算卡  交易管理 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/transaction_manage"
                        android:layout_width="205px"
                        android:layout_height="55px"
                        android:text="交易管理"
                        android:textColor="#f6ae36"
                        app:qmui_borderColor="#f6ae36"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25px"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/modify_card"
                        android:layout_width="205px"
                        android:layout_height="55px"
                        android:text="修改结算卡"
                        android:textColor="#f6ae36"
                        app:qmui_borderColor="#f6ae36"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="25px"
                        android:layout_gravity="center_vertical"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f3f3f3"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</FrameLayout>