<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/qmui_config_color_white"
    >

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_separator_color="@color/qmui_config_color_white"
        app:qmui_topbar_title_color="@android:color/black"
        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_return_black"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white"
        android:orientation="vertical"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher_round"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:hint="请输入手机号"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@null"
                android:textSize="30px"
                android:inputType="number"
                android:maxLength="13"
                />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e5e5e5"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    />
            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:hint="请输入密码"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="30px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e5e5e5"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="100px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:textSize="36px"
                android:textColor="@color/qmui_config_color_white"
                android:text="登 录"
                app:qmui_borderColor="@color/colorPrimary"
                app:qmui_backgroundColor="@color/colorPrimary"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                >
                <CheckBox
                    android:id="@+id/isPassWord"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="记住密码？"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:checked="true"
                    />
                <TextView
                    android:id="@+id/tv_forgotPwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="忘记密码？"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>